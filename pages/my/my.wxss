.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.bg {
  width: 750rpx;
  height: 574rpx;
}

.btn-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  top: 255rpx;
  width: 100%;
}

.click-img {
  width:120rpx;
  height:120rpx;
  border-radius: 50%;
}

.about-container {
  display: flex;
  justify-content: space-between;
  padding: 0 100rpx;
  width: 550rpx;
}

.about-us {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  bottom: 150rpx;
}

.about-us image {
  width: 34rpx;
  height: 34rpx;
  margin-bottom: 10rpx;
}

.book-num{
  font-size: 36rpx;
  color: #000;
  margin-bottom: 10rpx;
}

.description {
  font-size: 24rpx;
  color: #999;
}

.like-container{
  width:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
}

.headline{
  margin-top:30rpx;
  width:97rpx;
  height:42rpx;
}

.preview-container{
  margin-top:30rpx;
  display: flex;
  flex-direction: row;
  padding:0 30rpx;
  flex-wrap: wrap;
  justify-content: space-between;
}

.preview{
  margin-bottom: 30rpx;
}