.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: #f5f5f5;
}

.header {
  background-color: #fff;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header-img {
  width: 200rpx;
  height: 300rpx;
  box-shadow:2px 2px 3px #e3e3e3;
}

.header-title {
  color: #2f2f2f;
  margin-top: 20rpx;
  font-size: 38rpx;
  font-weight: 600;
}

.header-author {
  font-size: 28rpx;
  color: #999;
}

.sub-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  width: 690rpx;
  margin-top: 30rpx;
  padding: 0 50rpx;
}

.headline {
  font-size: 30rpx;
  font-weight: 600;
  color: #2f2f2f;
  margin-bottom: 30rpx;
}

.comment-container {
  display: flex;
  flex-direction: row;
  width: 100%;
  flex-wrap: wrap;
}

.comment-container tag-cmp:first-child view {
  background-color: #fffbdd
}

.comment-container tag-cmp:nth-child(2) view {
  background-color: #eefbff
}

.tag {
  margin-right: 15rpx;
  margin-bottom: 10rpx;
  border-radius: 15px !important;
}

.num {
  margin-left: 5px;
  font-size: 22rpx;
  color: #aaa;
}

.content {
  text-indent: 58rpx;
  font-weight: 500;
}

.detail-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-bottom: 100rpx;
  font-size: 28rpx;
  color: #666;
}

.vertical {
  display: flex;
  flex-direction: column;
}

.post-container {
  position: fixed;
  bottom: 0;
  width: 690rpx;
  height: 100rpx;
  background-color: #fff;
  padding: 0 30rpx;
  box-shadow: 1px -1px 1px #e3e3e3;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 99;
}

.post-fake {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
  width: 460rpx;
  border: 1px solid #999;
  border-radius: 15px;
  font-size: 22rpx;
  padding-left: 20rpx;
}

.posting-container {
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  width: 690rpx;
  padding: 0 30rpx;
  z-index: 999;
}

.post-header {
  width: 100%;
  border-bottom: 1px solid #f5f5f5;
  border-top: 1px solid #f5f5f5;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.click-tag {
  font-size: 28rpx;
  color: #bbb;
}

.cancel {
  font-size: 30rpx;
  color: #666;
}

.post {
  width: 690rpx;
  margin: 30rpx auto;
  height: 56rpx;
  background-color: #f5f5f5;
  border-radius: 15px;
  padding-left: 25rpx;
  font-size: 30rpx;
}

.shadow {
  width: 100%;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #999;
  padding-bottom: 10rpx;
}

