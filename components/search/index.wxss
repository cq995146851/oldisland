.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.header {
  position: fixed;
  top: 0;
  height: 100rpx;
  z-index: 99;
  display: flex;
  align-items: center;
  background-color: #fff; 
}

.search-container {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 50px;
  margin-left: 20rpx;
}

.search-img {
  width: 14px;
  height: 14px;
  margin-left: 12px;
  margin-right: 8px;
}

.input {
  width: 500rpx;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  font-size: 14px;
}

.cancel-img {
  width: 14px;
  height: 14px;
  margin-right: 10px;
}

.cancel {
  font-size: 32rpx;
  color: #333;
}

.tag-container {
  margin-top: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.history {
  width: 690rpx;
  margin: 40rpx 0 20rpx 0;
  display: flex;
  flex-direction: column;
  font-size: 14px;
}

.no-history {
  height: 60rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #333;
  font-size: 32rpx;
}

.hot-search{
  margin-top:70rpx;
}

.title {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.chunk {
  height: 15px;
  width: 5px;
  background-color: #000;
  display: inline-block;
  margin-right: 10px;
}

.tags {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 24rpx;
  padding-left: 15px;
  width: 630rpx;
}

.tags tag-cmp view{
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.books-container {
  width: 570rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 0 90rpx;
  margin-top: 100rpx;
}

.loading {
  margin: 50rpx 0 50rpx 0;
}

.load-all {
  height: 80rpx;
  line-height: 50rpx;
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}