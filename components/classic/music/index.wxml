<view class="classic-container">
  <image class="classic-image {{isPlay ? 'rotation' : ''}}" src="{{imgUrl}}"></image>
  <image class="play-img" 
         bind:tap = "onPlay"
         src="{{isPlay ? playUrl : pauseUrl}}"
  ></image>
  <image class="tag" src="./images/music@tag.png"></image>
  <text class="content">{{content}}</text>
</view>